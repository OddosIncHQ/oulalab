<odoo>
    <data noupdate="1">
        <!--
        Categoría de Aplicación para agrupar los permisos.
        Esto hace que aparezcan en una sección dedicada en la configuración de usuarios.
        -->
        <record model="ir.module.category" id="module_category_arriendo">
            <field name="name">Arriendo de Prendas</field>
            <field name="description">Permisos para la aplicación de Arriendo de Prendas.</field>
            <field name="sequence">26</field>
        </record>

        <!--
        Grupo de Usuario: Permisos básicos de lectura.
        Este es el grupo que faltaba y causaba el error.
        -->
        <record id="group_arriendo_user" model="res.groups">
            <field name="name">Arriendos: Usuario</field>
            <field name="category_id" ref="module_category_arriendo"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">
                El usuario puede ver los menús de la aplicación de Arriendos y la información básica.
            </field>
        </record>

        <!--
        Grupo de Manager: Permisos completos de gestión.
        Hereda los permisos del grupo de Usuario.
        -->
        <record id="group_arriendo_manager" model="res.groups">
            <field name="name">Arriendos: Manager</field>
            <field name="category_id" ref="module_category_arriendo"/>
            <field name="implied_ids" eval="[(4, ref('group_arriendo_user'))]"/>
            <field name="comment">
                El manager tiene acceso completo para crear, editar y eliminar todos los registros de la aplicación de Arriendos.
            </field>
        </record>
    </data>
</odoo>
