<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de Lista (Tree) -->
    <record id="view_arriendo_prenda_linea_tree" model="ir.ui.view">
        <field name="name">arriendo.prenda.linea.tree</field>
        <field name="model">arriendo.prenda.linea</field>
        <field name="arch" type="xml">
            <tree decoration-info="estado=='arrendada'"
                  decoration-success="estado=='devuelta'"
                  decoration-warning="estado in ('en_limpieza', 'mantenimiento')"
                  decoration-danger="estado=='perdida'">
                <field name="suscripcion_id"/>
                <field name="prenda_id"/>
                <field name="numero_serie_id"/>
                <field name="fecha_arriendo"/>
                <field name="fecha_devolucion"/>
                <field name="estado"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="view_arriendo_prenda_linea_form" model="ir.ui.view">
        <field name="name">arriendo.prenda.linea.form</field>
        <field name="model">arriendo.prenda.linea</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="suscripcion_id"/>
                            <field name="prenda_id"/>
                            <field name="numero_serie_id"/>
                        </group>
                        <group>
                            <field name="estado"/>
                            <field name="fecha_arriendo"/>
                            <field name="fecha_devolucion"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana (se mantiene igual) -->
    <record id="action_arriendo_prenda_linea" model="ir.actions.act_window">
        <field name="name">Historial de Arriendos</field>
        <field name="res_model">arriendo.prenda.linea</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aún no hay registros de arriendos.
            </p><p>
                Los registros se crean automáticamente al validar albaranes de salida vinculados a una suscripción.
            </p>
        </field>
    </record>

    <!--
    SE HAN ELIMINADO LOS MENUS ANTERIORES DE AQUÍ.
    Los <menuitem> que estaban aquí (menu_arriendo_prenda_root y menu_arriendo_prenda_linea)
    han sido reemplazados por la estructura centralizada en 'views/menu_views.xml'.
    -->

</odoo>
