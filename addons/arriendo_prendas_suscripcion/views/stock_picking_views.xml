<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_picking_form_inherit_arriendo" model="ir.ui.view">
        <field name="name">stock.picking.form.arriendo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Campos de arriendo insertados después de partner_id -->
            <xpath expr="//group/field[@name='partner_id']" position="after">
                <group string="Arriendo">
                    <field name="x_suscripcion_id"
                           options="{'no_create': True, 'no_create_edit': True}"
                           domain="[('partner_id', '=', partner_id), ('is_subscription', '=', True), ('state', '=', 'sale')]"/>
                    <field name="x_es_cambio_prenda"
                           string="¿Cambio de Prenda?"
                           modifiers='{"invisible": [["x_suscripcion_id", "=", false]]}'/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
