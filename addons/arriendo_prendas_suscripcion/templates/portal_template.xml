<odoo>
    <!--
    1. Añade la tarjeta de "Mis Arriendos" al panel principal del portal ("Mi Cuenta").
    Hereda del template estándar de Odoo para asegurar la compatibilidad.
    -->
    <template id="portal_my_home_rental" name="Portal My Home: Rental" inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <!-- La tarjeta solo aparece si el contador 'rental_count' existe (definido en el controlador) -->
            <t t-if="rental_count is not None">
                 <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/my/rentals">
                    <div class="flex-grow-1">
                        <h5 class="mb-1">Mis Arriendos</h5>
                        <p class="mb-0 text-muted">
                            Gestiona tus prendas, solicita cambios y devoluciones.
                        </p>
                    </div>
                    <span class="badge bg-primary rounded-pill" t-esc="rental_count"/>
                </a>
            </t>
        </xpath>
    </template>

    <!--
    2. Panel de control principal de arriendos.
    Esta es la página que ve el cliente al hacer clic en "Mis Arriendos".
    -->
    <template id="portal_dashboard" name="Portal de Arriendos">
        <t t-call="portal.portal_layout">
            <t t-set="title">Mis Arriendos</t>

            <div class="container py-4">
                <!-- Mensajes de éxito o error pasados por la URL -->
                <t t-if="request.params.get('success_message')">
                    <div class="alert alert-success" role="alert"><t t-esc="request.params.get('success_message')"/></div>
                </t>
                <t t-if="request.params.get('error_message')">
                    <div class="alert alert-danger" role="alert"><t t-esc="request.params.get('error_message')"/></div>
                </t>

                <!-- Resumen de la suscripción -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="mb-0">Resumen de tu Suscripción: <t t-esc="subscription.name"/></h3>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3 col-6 mb-3"><strong>Prendas en Posesión:</strong> <span class="text-primary fw-bold"><t t-esc="subscription.x_cantidad_prendas_en_posesion"/></span></div>
                            <div class="col-md-3 col-6 mb-3"><strong>Máximo Permitido:</strong> <span class="text-success fw-bold"><t t-esc="subscription.x_max_prendas_permitidas"/></span></div>
                            <div class="col-md-3 col-6 mb-3"><strong>Cambios Usados:</strong> <span class="text-warning fw-bold"><t t-esc="subscription.x_cambios_usados_mes"/></span></div>
                            <div class="col-md-3 col-6 mb-3"><strong>Cambios Permitidos:</strong> <span class="text-info fw-bold"><t t-esc="subscription.x_cambios_permitidos_mes"/></span></div>
                        </div>
                    </div>
                </div>

                <!-- Acciones Principales -->
                <div class="text-center mb-4">
                    <a href="/my/rentals/catalog" class="btn btn-primary btn-lg">Arrendar Nuevas Prendas</a>
                </div>

                <!-- Lista de Prendas en Posesión -->
                <h4>Prendas que tienes en casa</h4>
                <form action="/my/rentals/return" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <t t-if="prendas_arrendadas">
                        <ul class="list-group">
                            <t t-foreach="prendas_arrendadas" t-as="linea">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <input type="checkbox" class="form-check-input me-2" name="lot_ids" t-att-value="linea.numero_serie_id.id"/>
                                        <img t-attf-src="/web/image/product.product/#{linea.prenda_id.id}/image_64" class="rounded me-3" style="width: 64px; height: 64px; object-fit: cover;"/>
                                        <span class="fw-bold"><t t-esc="linea.prenda_id.name"/></span>
                                        <small class="text-muted">(Serie: <t t-esc="linea.numero_serie_id.name"/>)</small>
                                    </div>
                                    <span class="text-muted">Enviado el: <span t-field="linea.fecha_arriendo" t-options='{"widget": "date"}'/></span>
                                </li>
                            </t>
                        </ul>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-outline-danger">Solicitar Devolución de Seleccionadas</button>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="alert alert-secondary text-center" role="alert">
                            No tienes ninguna prenda en casa. ¡Es hora de elegir algo nuevo!
                        </div>
                    </t>
                </form>
            </div>
        </t>
    </template>

    <!--
    3. Plantilla para cuando el cliente no tiene una suscripción activa.
    -->
    <template id="portal_no_subscription" name="Sin Suscripción">
        <t t-call="portal.portal_layout">
            <div class="container text-center py-5">
                <h2 class="mb-3">¡Ups! Aún no tienes una suscripción.</h2>
                <p class="lead text-muted">Para comenzar a arrendar prendas, necesitas una suscripción activa.</p>
                <div class="mt-4">
                    <!-- Este enlace debería llevar a tu página de planes de suscripción -->
                    <a href="/shop" class="btn btn-primary btn-lg">Ver Planes de Suscripción</a>
                    <a href="/my/home" class="btn btn-secondary btn-lg">Volver al Portal</a>
                </div>
            </div>
        </t>
    </template>

</odoo>
