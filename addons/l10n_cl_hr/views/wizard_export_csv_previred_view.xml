<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="wizard_export_csv_previred_form_view">
        <field name="name">wizard.export.csv.previred.form</field>
        <field name="model">wizard.export.csv.previred</field>
        <field name="arch" type="xml">
            <form string="GeneraciÃ³n Archivo Previred">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        Seleccione el rango de fechas para generar el archivo plano (CSV/TXT) compatible con Previred.
                    </div>
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="delimiter_option" required="1"/>
                            <field name="file_data" filename="file_name" readonly="1"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                            <field name="delimiter_field_option" required="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Generar reporte" 
                            name="action_generate_csv"
                            type="object" 
                            class="btn-primary" 
                            data-hotkey="q"/>
                            
                    <button string="Cerrar" 
                            special="cancel" 
                            class="btn-secondary" 
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_wizard_export_csv_previred_tree_view">
        <field name="name">Exportar Previred</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.export.csv.previred</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_export_csv_previred_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="wizard_export_csv_menu" 
              name="Archivo Previred"
              sequence="20" 
              parent="menu_cl_hr_payroll_reports" 
              action="action_wizard_export_csv_previred_tree_view"/>
</odoo>
