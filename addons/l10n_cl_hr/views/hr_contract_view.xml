<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_chile_view" model="ir.ui.view">
        <field name="name">hr.contract.chile.view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='wage']" position="after">
                <field name="otros_imp" invisible="1"/>
                <field name="otro_no_imp" invisible="1"/>
                
                <label for="colacion"/>
                <div name="colacion">
                    <field name="colacion"/>
                </div>
                
                <label for="movilizacion"/>
                <div name="movilizacion">
                    <field name="movilizacion"/>
                </div>
                
                <label for="viatico_santiago"/>
                <div name="viatico_santiago">
                    <field name="viatico_santiago"/>
                </div>
                
                <label for="anticipo_sueldo"/>
                <div name="anticipo_sueldo">
                    <field name="anticipo_sueldo"/>
                </div>
                
                <label for="gratificacion_legal"/>
                <div name="gratificacion_legal">
                    <field name="gratificacion_legal"/>
                </div>
            </xpath>

            <xpath expr="//page[@name='information']" position="after">
                
                <page string="Carga Familiar" name="family_burden">
                    <group name="health1" string="Asignaci贸n Familiar">
                        <group>
                            <field name="carga_familiar"/>
                            <field name="carga_familiar_maternal"/>
                            <field name="carga_familiar_invalida"/>
                        </group>
                    </group>
                </page>

                <page string="Salud (Isapre/Fonasa)" name="health">
                    <group name="health2">
                        <group name="health3" string="Instituci贸n de Salud">
                            <field name="isapre_id" required="1"/>
                            
                            <label for="isapre_moneda" invisible="isapre_id == 1"/>
                            <div name="isapre_moneda" invisible="isapre_id == 1">
                                <field name="isapre_moneda"/>
                            </div>
                            
                            <label for="isapre_cotizacion_uf" string="Cotizaci贸n Pactada" invisible="isapre_id == 1"/>
                            <div name="isapre_cotizacion_uf" invisible="isapre_id == 1">
                                <field name="isapre_cotizacion_uf"/>
                            </div>
                            
                            <label for="isapre_fun" invisible="isapre_id == 1"/>
                            <div name="isapre_fun" invisible="isapre_id == 1">
                                <field name="isapre_fun"/>
                            </div>
                            
                            <label for="isapre_cuenta_propia" invisible="isapre_id == 1"/>
                            <div name="isapre_cuenta_propia" invisible="isapre_id == 1">
                                <field name="isapre_cuenta_propia"/>
                            </div>
                        </group>

                        <group name="health8" string="Seguro Complementario">
                            <field name="seguro_complementario_id"/>
                            <field name="seguro_complementario_moneda"/>
                            <field name="seguro_complementario"/>
                        </group>
                    </group>
                </page>

                <page string="Previsi贸n (AFP/APV)" name="afp">
                    <group name="fondos">
                        <group name="pens" string="AFP">
                            <field name="pension"/>
                            <field name="sin_afp"/>
                            <field name="sin_afp_sis"/>
                            <field name="mutual_seguridad"/>
                            
                            <field name="afp_id" 
                                   invisible="pension == True" 
                                   required="pension == False"/>
                        </group>
                        
                        <group name="APV" string="Aporte Previsional Voluntario">
                            <field name="apv_id"/>
                            <field name="aporte_voluntario_moneda"/>
                            <field name="aporte_voluntario"/>
                            <field name="forma_pago_apv"/>
                        </group>
                    </group>
                </page>

            </xpath>
        </field>
    </record>
</odoo>
