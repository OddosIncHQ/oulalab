<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_hr_payslip_inherit_form_l10n_cl">
            <field name="name">hr.payslip.inherit.form.l10n.cl</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='date_to']" position="after">
                    <field name="l10n_cl_indicadores_id" 
                           required="1" 
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Seleccione UF/UTM del mes"/>
                    
                    <field name="l10n_cl_uf" invisible="1"/>
                    <field name="l10n_cl_utm" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='credit_note']" position="after">
                    <separator string="Movimientos Previred" colspan="2"/>
                    
                    <field name="movimientos_personal" string="CÃ³digo Movimiento"/>
                    
                    <field name="date_start_mp" string="Inicio MP" 
                           invisible="movimientos_personal == '0'"/>
                           
                    <field name="date_end_mp" string="Fin MP" 
                           invisible="movimientos_personal == '0'"/>
                </xpath>
            </field>
        </record>

        <record id="view_hr_payslip_line_tree_inherit_l10n_cl" model="ir.ui.view">
            <field name="name">hr.payslip.line.tree.inherit.l10n.cl</field>
            <field name="model">hr.payslip.line</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
