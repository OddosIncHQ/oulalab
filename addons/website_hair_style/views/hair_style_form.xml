<odoo>
    <template id="hair_style_form" name="Formulario de Estilo de Cabello">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1 class="text-center mb-4">Probar un Estilo de Cabello</h1>
                <form action="/hair_style/apply" method="post" enctype="multipart/form-data" class="text-center">
                    <div class="form-group">
                        <label for="image">Cargar una Imagen:</label>
                        <input type="file" name="image" id="image" required class="form-control mt-3"/>
                    </div>
                    <div class="form-group mt-4">
                        <label for="style">Seleccionar Estilo:</label>
                        <select name="style" id="style" class="form-control mt-3">
                            <option value="curly">Rizado</option>
                            <option value="straight">Liso</option>
                            <option value="wavy">Ondulado</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Aplicar Estilo</button>
                </form>
            </div>
        </t>
    </template>

    <template id="result_template" name="Resultado del Estilo de Cabello">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1 class="text-center mb-4">Resultado del Estilo de Cabello</h1>
                <div class="text-center">
                    <img t-att-src="image_url" alt="Imagen procesada" class="img-fluid rounded shadow-lg" style="max-width: 80%; height: auto; border: 2px solid #ccc;"/>
                </div>
                <div class="text-center mt-4">
                    <a href="/hair_style" class="btn btn-secondary">Probar otro estilo</a>
                </div>
            </div>
        </t>
    </template>
</odoo>
